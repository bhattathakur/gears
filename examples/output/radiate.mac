# must be specified before /run/initialize
/geometry/source target.tg

# enable the following for neutron simulation
#/physics_lists/enable HadronElastic
#/physics_lists/enable HadronInelastic

# initialize Geant4 kernal
/run/initialize

# change particle and its energy here

#alpha particle
#/gps/particle alpha        
#/gps/energy   6.0 MeV     

#beta particle
#/gps/particle gamma          
#/gps/energy   4.0 MeV     

#gamma particle 
#/gps/particle gamma
#/gps/energy   2.6 MeV     

#same energy to all
/gps/particle gamma
/gps/energy 5. MeV

/gps/position -45 0 0 cm
#45 cm towards the negative x-axis

/gps/direction 1 0 0
#towards postive x-axis
# visualize geometry and events for debugging
/vis/open HepRepFile
/vis/drawVolume
/vis/scene/add/gps
/vis/scene/add/axes
/vis/scene/add/trajectories
/vis/scene/endOfEventAction accumulate 10

# dump a few events on screen for debugging
/tracking/verbose 2
/run/beamOn 10

# turn off debugging tools for fast simulation 
/vis/disable
/tracking/verbose 0

# turn on data recording
/analysis/setFileName output
#name of datarecording file is output we can rename it
#by default gears will add .root to the output file
# turn on progress report
# printprogress shows for every 1000 events
/run/verbose 2
/run/printProgress 1000
# start simulation
/run/beamOn 5000
